{
  "name": "electron-typescript-template",
  "productName": "Template",
  "version": "1.0.0",
  "description": "ready-to-start typescript electron template",
  "main": "./dist/backend/main.js",
  "scripts": {
    "build": "npm run clean:dist && tsc && npm run copy:files",
    "start": "npm run build && electron ./dist/backend/main.js",
    "make": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint \"{src}/**/*.ts\" --fix",
    "clean:dist": "rimraf dist/",
    "copy:files": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.svg src/assets/**/* dist/"
  },
  "author": "Artiom Karimov",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jest": "^29.5.2",
    "copyfiles": "^2.4.1",
    "electron": "^25.1.0",
    "electron-builder": "^23.6.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "build": {
    "appId": "com.example.template",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "!src/**/*"
    ],
    "dmg": {
      "title": "${productName} ${version}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "src/assets/icons/icon.ico"
    },
    "nsis": {
      "perMachine": true
    }
  }
}
